{
  "name": "Send link to Mistral AI",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "description": "A browser extension that allow to send a link to Mistral AI.",
  "permissions": [
    "contextMenus",
    "storage",
    "https://kutt.brondino.fr/*"
  ],
  "icons": {
    "16": "icons/extension-icon16x16.png",
    "32": "icons/extension-icon32x32.png",
    "48": "icons/extension-icon48x48.png",
    "128": "icons/extension-icon128x128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{3a4de66b-eff0-4b9a-8efe-ddea8d10a0b9}"
    }
  }
}